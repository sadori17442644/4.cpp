#include <iostream>
#include <cstdlib> 
#include <ctime>
#include <cmath>
#include <string>

using namespace std;

void task_1() 
{
    double length, width;

    cout << "Enter a: ";
    cin >> length;

    cout << "Enter b: ";
    cin >> width;

    double perimeter = 2 * (length + width);
    double area = length * width;

    cout << "P: " << perimeter << endl;
    cout << "S: " << area << endl;
}

void task_2() 
{
    const double USD_RATE = 85; 
    double rubles;

    cout << "Enter how much rubles: ";
    cin >> rubles;

    double dollars = rubles / USD_RATE;

    cout << "Rub -> Dollars$: " << dollars << endl;
}

void task_3() 
{
    std::srand(std::time(nullptr));

    int secretNumber = std::rand() % 100;

    int userGuess;

    std::cout << "Enter some number from 0 - 99: ";
    std::cin >> userGuess;

    if (userGuess == secretNumber) {
        std::cout << "true" << std::endl;
    } else {
        std::cout << "false" << std::endl;
    }
}

void task_4() 
{
    char symbol;

    cout << "Enter some sym: ";
    cin >> symbol;

    cout << "ASCII-code numbers: " << static_cast<int>(symbol) << endl;

    char nextSymbol = symbol + 1;

    cout << "Next sym: " << nextSymbol << endl;
}

void task_5() 
{
    int totalMinutes;

    cout << "Enter num min: ";
    cin >> totalMinutes;

    int hours = totalMinutes / 60;
    int minutes = totalMinutes % 60;

    cout << totalMinutes << " min = " << hours << " h " << minutes << " min" << endl;
}

void task_6() 
{
    int number;

    cout << "Enter number: ";
    cin >> number;

    if (number >= 0 && number <= 10 && number >= 5 && number <= 15) {
        cout << "Number == [0, 10] и [5, 15]." << endl;
    } else {
        cout << "Num == one time." << endl;
    }
}

void task_7()
{
    int x = 5; 
    int y = 10; 
    int temp; 

    cout << "Before: x = " << x << ", y = " << y << endl;

    temp = x;
    x = y;
    y = temp;

    cout << "After: x = " << x << ", y = " << y << endl;
}

void task_8()
{
    double num1, num2, num3;

    cout << "Enter number: ";
    cin >> num1 >> num2 >> num3;

    double average = (num1 + num2 + num3) / 3.0;

    cout << "Srednee (float): " << average << endl;
    cout << "Srednee (int): " << static_cast<int>(average) << endl;
}

void task_9()
{
    double a, b;

    cout << "K a: ";
    cin >> a;
    cout << "K b: ";
    cin >> b;

    if (a == 0) {
        if (b == 0) {
            cout << "beskonechnoe k resh." << endl;
        } else {
            cout << "Ne imeet resh." << endl;
        }
    } else {
        double x = -b / a;
        cout << "Res: x = " << x << endl;
    }
}

void task_10()
{
    string name;
    int age;
    int favoriteNumber;

    cout << "Enter your name: ";
    getline(cin, name);

    cout << "Enter your age: ";
    cin >> age;

    cout << "Enter your favorite number: ";
    cin >> favoriteNumber;

    cout << "Hello, " << name  << age << " old you, and your favorite number — " << favoriteNumber << "." << endl;
}


int main()
{
    task_1();
    task_2();
    task_3();
    task_4();
    task_5();
    task_6();
    task_7();
    task_8();
    task_9();
    task_10();


    return 0;
}
